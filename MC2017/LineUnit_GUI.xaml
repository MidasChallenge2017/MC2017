<UserControl x:Class="MC2017.LineUnit_GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC2017"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">
    <Grid>

        <Line x:Name="line" Stroke="Red" X2="90" Y2="15" Y1="15" StrokeThickness="3" />
        <Polygon x:Name="end" Points="70,0 70,30 100,15" Fill="Red" Visibility="Hidden"/>

    </Grid>
</UserControl>
