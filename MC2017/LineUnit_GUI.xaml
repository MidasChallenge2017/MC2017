<UserControl x:Class="MC2017.LineUnit_GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC2017"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">
    <Grid>
        <Polyline x:Name="polyline" Points="70,0 100,15 70,30" Stroke="#FF343434" StrokeThickness="3" Visibility="Hidden"/>
        <Rectangle x:Name="dot_from" Height="4" Stroke="#FFFF4242" StrokeThickness="3" VerticalAlignment="Top" Width="4" Margin="0,0,96,0" Visibility="Hidden"/>
        <Rectangle x:Name="dot_to" HorizontalAlignment="Left" Height="4" Stroke="#FFFF4242" StrokeThickness="3" VerticalAlignment="Top" Width="4" Visibility="Hidden"/>
        <Line x:Name="line" Stroke="#FF343434" X2="90" Y2="15" Y1="15" StrokeThickness="3" />
        <Polygon x:Name="polygon" Points="70,0 100,15 70,30" Fill="White" Stroke="#FF343434" StrokeThickness="3"/>

    </Grid>
</UserControl>
